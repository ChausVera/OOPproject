<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="52dp"
        android:text="Alias"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/infoView"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toEndOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/help_fill0_wght400_grad0_opsz24" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="264dp"
        android:layout_height="89dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="72dp"
        android:text="New Game"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <Button
        android:id="@+id/rankingButton"
        android:layout_width="264dp"
        android:layout_height="88dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:text="Last Game Ranking"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newGameButton" />

    <Button
        android:id="@+id/languageButton"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:text="EN"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="310dp"
        android:layout_height="297dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rankingButton"
        app:srcCompat="@drawable/start_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>