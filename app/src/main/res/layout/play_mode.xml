<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="52dp"
        android:text="Alias"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CurrentTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:hint="current team"
        android:text="777"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <TextView
        android:id="@+id/PastWords"
        android:layout_width="108dp"
        android:layout_height="32dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="8dp"
        android:text="Past Words"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CurrentTeam" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/WordsrecyclerView"
        android:layout_width="379dp"
        android:layout_height="262dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PastWords"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currentWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:hint="current word"
        android:textSize="34sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WordsrecyclerView" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="144dp"
        android:layout_height="70dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="120dp"
        android:text="Skip"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WordsrecyclerView" />

    <Button
        android:id="@+id/Nextbutton"
        android:layout_width="138dp"
        android:layout_height="68dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="120dp"
        android:text="Next"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/skipButton"
        app:layout_constraintTop_toBottomOf="@+id/WordsrecyclerView" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="113dp"
        android:layout_height="68dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="116dp"
        android:text=" "
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>